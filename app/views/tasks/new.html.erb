<h1>Create a new (Funny..) Task</h1>

<%= form_for @task do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<p><%= link_to "Get Back", tasks_path %></p>